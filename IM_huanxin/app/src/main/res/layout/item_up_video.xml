<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="250dp"
    android:padding="3dp">

    <ImageView
        android:id="@+id/up_video_preview"
        android:scaleType="centerInside"
        android:src="@mipmap/default_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:visibility="gone"
        android:id="@+id/mask"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/up_video_mark"
        android:layout_gravity="top|right"
        android:layout_marginTop="5.5dp"
        android:layout_marginRight="5.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_unselected"/>
    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/llo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>